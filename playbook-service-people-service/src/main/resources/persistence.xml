<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ESPNPlaybookServicePU">
		<jta-data-source>java:/jdbc/playbookDS</jta-data-source>
  
         
         <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
			<property name="hibernate.dialect"
			          value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.default_schema" value="prodops" />
			<property name="hibernate.show_sql" value="false" />
			<!-- debug setting - format sql output -->
			<property name="hibernate.format_sql" value="true" />
			<!-- debug setting - comment sql output -->
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			
			<!--  Infinispan cache settings (global defaults) -->
			<property name="hibernate.cache.infinispan.entity.eviction.strategy" value= "LRU"/>
			<!--  5 mins -->
			<property name="hibernate.cache.infinispan.entity.eviction.wake_up_interval" value= "300000"/>
			
			<property name="hibernate.cache.infinispan.entity.eviction.max_entries" value= "2000"/>
			<!--  2 hours.  Cached data shouldn't be updated very often -->
			<property name="hibernate.cache.infinispan.entity.expiration.lifespan" value= "7200000"/>
			<!--  30 mins -->
			<property name="hibernate.cache.infinispan.entity.expiration.max_idle" value= "1800000"/>
			
            
		</properties>
	</persistence-unit>
</persistence>