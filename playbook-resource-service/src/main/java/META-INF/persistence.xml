<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="playbookPU">
	
		<jta-data-source>java:/jdbc/playbookDS</jta-data-source>
		
		<class>com.espn.playbook.jpa.Role</class>
		<class>com.espn.playbook.jpa.Dept</class>
		<class>com.espn.playbook.jpa.DeptRoleXref</class>
		<class>com.espn.playbook.jpa.Rsrc</class>
		<class>com.espn.playbook.jpa.Prsn</class>
		<class>com.espn.playbook.jpa.RsrcType</class>
		<class>com.espn.playbook.jpa.RsrcRoleXref</class>
		<class>com.espn.playbook.jpa.PrsnType</class>
	    <class>com.espn.playbook.jpa.EmployeeType</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.default_schema" value="PRODOPS" />
			<property name="hibernate.default_batch_fetch_size" value="25" />
			<property name="hibernate.cache.use_query_cache" value="false" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>